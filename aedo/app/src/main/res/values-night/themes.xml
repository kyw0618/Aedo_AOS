<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.My_Heaven" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CommonButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/color_common_btn</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:outlineProvider">background</item>
    </style>

    <style name="CommonButtonStyle_second" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/color_common_btn_second</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:outlineProvider">background</item>
    </style>

    <style name="CommonButtonCardStyle" parent="CardView">
        <item name="android:layout_height">47dp</item>
        <item name="cardCornerRadius">9dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="MyTimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RoundButton.Cancel">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/sub_grey_6</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/sub_grey_2</item>
        <item name="rippleColor">@color/sub_grey_2</item>
    </style>

    <style name="RoundButton.Mint">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>